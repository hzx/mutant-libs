
edit {
  border: 1px solid #c3c3c3;
  fontSize: 16px;
  fontFamily: Tahoma, Arial, sans-serif;
  cursor: text;
  backgroundColor: #efefef;
}

edit_active {
  borderColor: #188dc3;
}

editWrap {
  padding: 4px 8px;
}

editInput {
  margin: 0;
  padding: 0;
  borderStyle: none;
  outlineStyle: none;
  overflow: hidden;
  width: 100%;
  height: 100%;
  fontSize: inherit;
  fontFamily: inherit;
  color: #585858;
  backgroundColor: transparent;
}

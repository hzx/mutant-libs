textarea {
  padding: 4px 8px;
  backgroundColor: #efefef;
  border: 1px solid #c3c3c3;
  fontFamily: Tahoma, Arial, sans-serif;
  cursor: text;
}

textarea_active {
  borderColor: #188dc3;
}

textareaInput {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  fontSize: inherit;
  fontFamily: inherit;
  borderStyle: none;
  outlineStyle: none;
  resize: none;
  tabSize: 2;
  overflow: hidden;
  color: #585858;
  backgroundColor: transparent;
}
